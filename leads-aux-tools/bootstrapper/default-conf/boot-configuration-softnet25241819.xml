            <numberOfProcessors>1</numberOfProcessors>
            <instances>1</instances>
        </component>
        <component>
            <name>planner</name>
            <configurationFile>planner.xml</configurationFile>
            <numberOfProcessors>1</numberOfProcessors>
            <instances>1</instances>
